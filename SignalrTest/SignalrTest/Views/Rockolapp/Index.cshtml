@{
    var spotifyUserId = ViewData["spotifyUserId"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>Rockolapp</title>
    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900" rel="stylesheet" type="text/css">
    <link href="fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Loading main css file -->
    <link href="~/Content/Rockolapp.css" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->
</head>
<body class="header-collapse">

    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a href="index.html" id="branding">
                    <img src="~/Content/dummy/logo.png" alt="Site Title">
                    <small class="site-description">Rockolapp</small>
                </a> <!-- #branding -->

                <nav class="main-navigation">
                    <button type="button" class="toggle-menu"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        @*<li class="menu-item current-menu-item"><a href="index.html">Home</a></li>
                        <li class="menu-item"><a href="about.html">About</a></li>
                        <li class="menu-item"><a href="gallery.html">Gallery</a></li>
                        <li class="menu-item"><a href="download.html">Download</a></li>
                        <li class="menu-item"><a href="blog.html">Blog</a></li>
                        <li class="menu-item"><a href="contact.html">Contact</a></li>*@
                    </ul> <!-- .menu -->
                </nav> <!-- .main-navigation -->
                <div class="mobile-menu"></div>
            </div>
        </header> <!-- .site-header -->

        <div class="hero">
            <div class="slider">
                <ul class="slides">
                    <!-- ko with: ScreenData -->
                    @*<li class="lazy-bg" data-background="~/Content/dummy/slide-1.jpg">*@
                    <li class="lazy-bg">

                        <div class="container">
                            <h2 class="slide-title"><span data-bind="text: TrackName"></span></h2>
                            <h3 class="slide-subtitle"><span data-bind="text: Artist"></span></h3>                           
                            <img width="640px" height="640px" data-bind="attr:{src: ImageUrl}" />                           
                        </div>
                    </li>
                    <li class="lazy-bg" data-background="~/Content/dummy/slide-2.jpg">
                        <div class="container">
                            <h2 class="slide-title"><span data-bind="text: TrackName"></span></h2>
                            <h3 class="slide-subtitle"><span data-bind="text: Artist"></span></h3>                           
                            <img width="640px" height="640px" data-bind="attr:{src: ImageUrl}" />                
                        </div>
                    </li>
                    <li class="lazy-bg" data-background="~/Content/dummy/slide-3.jpg">
                        <div class="container">
                            <h2 class="slide-title"><span data-bind="text: TrackName"></span></h2>
                            <h3 class="slide-subtitle"><span data-bind="text: Artist"></span></h3>
                            <img width="640px" height="640px" data-bind="attr:{src: ImageUrl}" />           
                        </div>
                    </li>
                   <!-- /ko -->
                </ul>
            </div>
        </div>

       
        <footer class="site-footer">
            <div class="container">
              

                <address>
                    <p><br></p>
                </address>

              
            

                <p class="copy"></p>
            </div>
        </footer> <!-- .site-footer -->
    </div> <!-- #site-content -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/ViewModels/CommonScreenViewModel.js"></script>
    <script type="text/javascript">

        var CommonScreenViewModel = new CommonScreenViewModel('@spotifyUserId');
      
        ko.applyBindings(CommonScreenViewModel);

    </script>
</body>
</html>